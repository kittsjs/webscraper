{
  "name": "kloth-me-scraper",
  "version": "1.0.0",
  "description": "E-commerce product image scraper for dynamic sites",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && esbuild index.js --bundle --platform=node --target=node18 --format=esm --outdir=dist --minify --external:puppeteer --external:express",
    "build:dev": "rm -rf dist && esbuild index.js --bundle --platform=node --target=node18 --format=esm --outdir=dist --sourcemap --external:puppeteer --external:express",
    "build:watch": "esbuild index.js --bundle --platform=node --target=node18 --format=esm --outdir=dist --sourcemap --watch --external:puppeteer --external:express",
    "start": "node index.js",
    "start:prod": "node dist/index.js",
    "dev": "nodemon index.js",
    "postinstall": "PUPPETEER_CACHE_DIR=/opt/render/.cache/puppeteer node node_modules/puppeteer/install.mjs"
  },
  "keywords": ["scraper", "ecommerce", "images"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^24.29.1",
    "esbuild": "^0.19.11"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
